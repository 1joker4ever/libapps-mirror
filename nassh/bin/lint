"""Lint our source files."""

from __future__ import print_function

import glob
import os
import sys

import nassh
import libdot


def _get_default_paths():
    """Get list of paths to lint by default."""
    os.chdir(nassh.DIR)
    # All files in js/*.js excluding generated files.
    # Sort to ensure nasftp.js comes before nasftp_cli.js, etc.
    return sorted(
        x for x in glob.glob(os.path.join('js', '*.js'))
        if not x.startswith('js/nassh_deps'))


def main(argv):
    """The main func!"""
    return libdot.lint.main(argv, paths=_get_default_paths(),
                            closure_args=['--jscomp_error=lintChecks',
                                          '--jscomp_off=moduleLoad'])


if __name__ == '__main__':
    sys.exit(main(sys.argv[1:]))
